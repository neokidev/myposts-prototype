---
import Layout from "../layouts/Layout.astro";
import UserProfile from "../components/UserProfile.astro";
import PostCard from "../components/PostCard.astro";

const posts = [
  { index: 1 },
  { index: 2 },
  { index: 3 },
  { index: 4 },
  { index: 5 },
  { index: 6 },
  { index: 7 },
  { index: 8 },
  { index: 9 },
  { index: 10 },
  { index: 11 },
  { index: 12 },
];
---

<Layout title="Welcome to Astro.">
  <main>
    <UserProfile />
    <div class="flex justify-center">
      <div class="max-w-7xl">
        <div
          class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4 p-5 place-items-center"
        >
          <PostCard />

          {
            posts.map((post) => (
              <div class="bg-green-100 text-green-500 text-lg font-bold text-center rounded-lg w-72 h-80 flex items-center justify-center">
                {post.index}
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </main>
</Layout>
